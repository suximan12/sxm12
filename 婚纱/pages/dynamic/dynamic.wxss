/* pages/dynamic/dynamic.wxss */
.dynamic{
  width: 95%;
  margin: 0 auto;
}
.dynamic_k{
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  margin-top: 50rpx;
  border-radius: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx #e3e3e3;
}
.dynamic_k_t{
  width: 100%;
  height: 100rpx;
}
.dynamic_k_tl{
  width: 25%;
  height: 100rpx;
  float: left;
}
.dynamic_k_tl image{
  width: 100rpx;
  height: 100rpx;
  margin-left: 20rpx;
  border-radius: 50rpx;
}
.dynamic_k_tr{
  width: 75%;
  height: 100rpx;
  float: left;
  margin-left: -30rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction:column;  
  justify-content: space-around;
}
.dynamic_k_tr text:nth-child(1){
  line-height: 50rpx;
}
.dynamic_k_tr text:nth-child(2){
  line-height: 50rpx;
  font-size: 24rpx;
  color: #B1B1B1;
}
.dynamic_k_c{
  width: 100%;
  height: 320rpx;
  margin-top: 20rpx;
}
.dynamic_k_ct{
  height: 110rpx;
  color: #B1B1B1;
  font-size: 26rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction:column;  
  justify-content: space-between;
}
.dynamic_k_cb{
 height: 200rpx;
  display: flex;
  flex-direction:row;  
  justify-content: space-around;
}
.dynamic_k_cb image{
  margin-top: 30rpx;
  width: 23%;
  height: 160rpx;
}
.dynamic_k_b{
  width: 100%;
  height: 40rpx;
}
.dynamic_k_bl{
  float: left;
  font-size: 24rpx;
  color: #B1B1B1;
  margin-left: 10rpx;
}
.dynamic_k_br{
  float: right;
  font-size: 24rpx;
  color: #B1B1B1;
  margin-right: 10rpx;
}
.dynamic_k_br image{
  width: 30rpx;
  height: 30rpx;
}